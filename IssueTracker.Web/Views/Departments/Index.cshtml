@model IEnumerable<IssueTracker.Core.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<div class="pull-right">
    @Html.ActionLink("New Department", "Department", new { id = 0 }, new { @class = "btn btn-primary" })
</div>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Administor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var issue in Model)
        {
            <tr>
                <td>@Html.ActionLink(@issue.Name, "Deparment", new { id = issue.Id }) </td>
                <td>@issue.Admin.FullName</td>
            </tr>

        }
    </tbody>
</table>